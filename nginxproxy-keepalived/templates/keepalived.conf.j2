global_defs {
vrrp_instance VI_{{ id }} {
    state BACKUP
    interface {{ ifname }}
    virtual_router_id 101
    priority {{ host_weight }}
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass {{ auth_pass }}
    }
    virtual_ipaddress {
        {{ float_ip }}/24 dev {{ ifname }}
    }

}

